{
  "name": "@pilgrim-12/standard-logger-js",
  "version": "1.0.0",
  "description": "Standard logging library for JavaScript that implements a unified logging format",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "prepublishOnly": "npm run build",
    "example:basic": "node examples/basic/simple-logging.js",
    "example:express": "node examples/express/simple-server.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pilgrim-12/standard-logger-js.git"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "keywords": [
    "logging",
    "logger",
    "standard",
    "unified",
    "express",
    "pino",
    "tracing",
    "stepstone"
  ],
  "author": "StepStone Platform Team",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/pilgrim-12/standard-logger-js/issues"
  },
  "homepage": "https://github.com/pilgrim-12/standard-logger-js#readme",
  "dependencies": {
    "pino": "^9.6.0",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.16",
    "@types/pino": "^7.0.4",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.32.0",
    "@typescript-eslint/parser": "^8.32.0",
    "eslint": "^9.26.0",
    "eslint-config-prettier": "^10.1.3",
    "eslint-plugin-prettier": "^5.4.0",
    "express": "^5.1.0",
    "jest": "^29.7.0",
    "prettier": "^3.5.3",
    "ts-jest": "^29.3.2",
    "typescript": "^5.8.3"
  }
}